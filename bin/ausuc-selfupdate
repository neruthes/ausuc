ASU_FILEPATH="$(which ausuc-selfupdate)"
ASU_BINDIR="${ASU_FILEPATH/ausuc-selfupdate/}"

cd "${ASU_BINDIR}"
git pull origin master

echo "-----------------"
echo "ausuc-selfupdate: Self-update done through git. If there is any problem, merge manually in '${ASU_BINDIR}'."
